#include <stdio.h>
#include <stdlib.h>

int factTail(int n, int a){
	if(n < 0){
		return 0;
		}else{
			if(n == 0){
				return 1;
			}else{
				if(n == 1){
					return a;
				}else{
					return factTail(n-1, n*a);
				}
			}
		}
}

int main(){
	char respuesta;

	do{
		int n;
		printf("\nInserte el valor de n: ");
		scanf("%d", &n);

		printf("\nFactorial: %d", factTail(n, 1));
		
		printf("\n\nDeseas repetir (S/N) ");
		scanf(" %c", &respuesta);
	}while(respuesta == 'S' || respuesta == 's');
	return 0;
}

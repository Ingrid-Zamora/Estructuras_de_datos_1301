#include <stdio.h>
#include <stdlib.h>

int factRecursion(int n){
	if(n < 0){
		return 0;
		}else{
			if(n == 0){
				return 1;
			}else{
				if(n == 1){
					return 1;
				}else{
					return n * factRecursion(n-1);
				}
			}
		}
}

int main(){
	char respuesta;

	do{
		int n;
		printf("\nInserte el valor de n: ");
		scanf("%d", &n);
		
		printf("\nFactorial: %d", factRecursion(n));
		
		printf("\n\nDeseas repetir (S/N) ");
		scanf(" %c", &respuesta);
	}while(respuesta == 'S' || respuesta == 's');
	return 0;
}
